<form action="" method="post">
    {{#user}}
    <div class="form-field">
        <label for="first_name">First Name</label>
        <input
            id="first_name"
            name="first_name"
            value="{{first_name}}"
            required
        />
    </div>
    <div class="form-field">
        <label for="last_name">Last Name</label>
        <input id="last_name" name="last_name" value="{{last_name}}" required />
    </div>
    <div class="form-field">
        <label for="email">E-Mail Address</label>
        <input
            id="email"
            name="email"
            type="email"
            value="{{email}}"
            required
        />
    </div>
    <div class="form-field">
        <label for="password">Password</label>
        <input
            id="password"
            name="password"
            type="password"
        />
    </div>
    <div class="form-field">
        <label for="age">Age</label>
        <input id="age" name="age" type="number" {{#if age}}value="{{age}}"{{/if}}/>
    </div>
    <div class="form-field">
        <label for="city">City</label>
        <input id="city" name="city" {{#if city}}value="{{city}}"{{/if}}/>
    </div>
    <div class="form-field">
        <label for="homepage">Homepage</label>
        <input id="homepage" name="homepage" type="url" {{#if homepage}}value="{{homepage}}"{{/if}}/>
    </div>
    {{/user}}
    <input type="hidden" name="_csrf" value="{{csrfToken}}" />
    <button type="submit">update</button>
</form>