<script src="/script.js" defer></script>
{{>navbar}}
<section class="content nav-offset title">
    <h3>Sign here:</h3>
    <form method="POST">
        <input id="signature" name="signature" type="hidden">
        <canvas id="canvas" class="signature" width="800px" height="250px"></canvas>
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
        <button class="button-m" type="submit">submit</button>
        {{#if error}}
        {{>submitError}}
        {{/if}}
    </form>
</section>
